{
  "manifest_version": 3,
  "name": "Push Go for Pushbullet",
  "version": "1.4.2",
  "description": "A lightweight, open-source extension for cross-device pushes via Pushbullet API.",
  "homepage_url": "https://github.com/nemofq/pushbullet-go/",
  "icons": {
    "128": "icon128.png"
  },
  "minimum_chrome_version": "116",
  "permissions": [
    "storage",
    "idle",
    "notifications",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.pushbullet.com/*",
    "https://*.pushbulletusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Push Go",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "options_page": "options.html"
}